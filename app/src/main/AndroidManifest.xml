<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.d121211091.biodata_app.app.BiodataApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BiodataApp">

        <activity
            android:name="com.d121211091.biodata_app.ui.activities.SplashActivity"
            android:exported="true"
            android:theme="@style/splashTheme">
        </activity>

        <activity
            android:name="com.d121211091.biodata_app.ui.activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.BiodataApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>